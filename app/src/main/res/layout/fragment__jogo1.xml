<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_jogo1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_cinzento"
    tools:context=".FragmentJogo1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo_jg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adivinhe o Som"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc_jg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/desc_jg1"
            android:textColor="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo_jg1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tutorial"
            android:layout_width="224dp"
            android:layout_height="70dp"
            android:layout_marginTop="48dp"
            android:text="TUTORIAL"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_jg1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play1"
            android:layout_width="224dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:drawableTint="@color/verde_claro"
            android:text="JOGAR"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/verde_cinzento"
            android:textColorLink="@color/verde_claro"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_tutorial" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>