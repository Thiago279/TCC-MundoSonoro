<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_cinzento"
    tools:context=".fragments.jogos.traduzir.TraduzirHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo_traducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:text="Jogo de Tradução"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:text="Traduza palavras do português para o inglês!"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo_traducao" />

        <TextView
            android:id="@+id/instrucoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="40dp"
            android:text="• Ouça a palavra em português\n• Escolha a tradução correta\n• Ganhe pontos a cada acerto!"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descricao" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ouvir_instrucoes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:text="OUVIR INSTRUÇÕES"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instrucoes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_comecar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:text="COMEÇAR JOGO"
            android:textColor="@color/verde_cinzento"
            android:textSize="22sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ouvir_instrucoes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>