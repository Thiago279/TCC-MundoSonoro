<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_cinzento"
    tools:context=".fragments.menu.TutorialFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo_tutorial_interativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:text="Aprendendo a Jogar!"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="28sp"
            android:contentDescription="Tutorial interativo - Aprendendo a jogar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etapa_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:text="Etapa: 1/5"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="18sp"
            android:contentDescription="Etapa 1 de 5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo_tutorial_interativo" />

        <TextView
            android:id="@+id/instrucao_atual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:text="Deslize o dedo pela tela para navegar pelos botões"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="@color/verde_claro"
            android:textSize="20sp"
            android:lineSpacingExtra="4dp"
            android:contentDescription="Instrução atual do tutorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etapa_tutorial" />

        <!-- botao repetir instrução -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_repetir_instrucao"
            android:backgroundTint="@color/verde_claro"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-black"
            android:text="REPETIR INSTRUÇÃO"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            android:contentDescription="Repetir instrução atual. Toque duas vezes para ouvir novamente"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instrucao_atual" />

        <!-- Botões de prática -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pratica_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/verde_claro"
            android:text="BOTÃO 1"
            app:cornerRadius="12dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/verde_cinzento"
            android:contentDescription="Botão de prática 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_repetir_instrucao" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pratica_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/verde_claro"
            android:text="BOTÃO 2"
            app:cornerRadius="12dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/verde_cinzento"
            android:contentDescription="Botão de prática 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_pratica_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pratica_3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:text="BOTÃO 3"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            android:contentDescription="Botão de prática 3"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_pratica_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pratica_4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:text="BOTÃO 4"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            android:contentDescription="Botão de prática 3"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_pratica_3" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_finalizar_tutorial"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-black"
            android:text="FINALIZAR"
            android:textColor="@color/verde_cinzento"
            android:textSize="20sp"
            android:visibility="gone"
            android:contentDescription="Finalizar tutorial e voltar ao menu"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_pratica_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>